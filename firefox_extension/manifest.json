{
  "manifest_version": 2,
  "name": "Command Listener",
  "version": "1.0",
  "description": "A basic command listener extension for Firefox",
  "permissions": [
     "tabs",
     "activeTab"
  ],
  "background": {
     "scripts": ["background.js"],
     "persistent": false
  },
  "icons": {
     "16": "icons/icon16.png",
     "48": "icons/icon48.png",
     "128": "icons/icon128.png"
  }
}
